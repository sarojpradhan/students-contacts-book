<%= form_for(@address_book) do |f| %>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>
  <div>
    <%= f.label :post %>
    <%= f.text_field :post %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
